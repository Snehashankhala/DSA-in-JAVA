class Solution {
    public int jump(int[] nums) {
       int coverage =0;
       int totaljump=0;
       int lastjump =0;
       int j =nums.length-1;
       if(nums.length==1) return 0;

       for(int i=0; i<nums.length; i++){
        coverage =Math.max(coverage,i+nums[i]);

        if(i==lastjump){
            lastjump=coverage;      ##//we need beacuse coverage is future value we nned to another thing for midator here
            totaljump++;        ## this do is add+1 only for getting the wise result 
            if(coverage>=j){             j is distination we need to go
                return totaljump;
            }
        }
       }
        return totaljump;
    }
}
## [2,3,1,1,4]    ## we need minum jump for getting the last index so we go to max coverage for that  
Output
2
